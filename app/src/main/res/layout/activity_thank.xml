<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThankActivity"
    android:id="@+id/thank">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F0E1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/coffecup1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="Coffee"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="#A3593B"
                    android:textStyle="bold"
                    android:text="Net"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you for"
                android:textAlignment="center"
                android:textColor="#A35A3C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" your order!"
                android:textAlignment="center"
                android:textColor="#A35A3C"
                android:paddingBottom="30dp"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your coffee and treats are "
                android:textAlignment="center"
                android:textColor="#000000"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="on their way."
                android:textAlignment="center"
                android:textColor="#000000"
                android:paddingBottom="50dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_back_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A35A3C"
                android:textStyle="bold"
                android:padding="20dp"
                android:onClick="openThank"
                android:text="Back to home"
                android:background="@drawable/round_btn"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F0E1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/coffecup1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Coffee"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#A3593B"
                android:textStyle="bold"
                android:text="Net"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for"
            android:textAlignment="center"
            android:textColor="#A35A3C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" your order!"
            android:textAlignment="center"
            android:textColor="#A35A3C"
            android:paddingBottom="30dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your coffee and treats are "
            android:textAlignment="center"
            android:textColor="#000000"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="on their way."
            android:textAlignment="center"
            android:textColor="#000000"
            android:paddingBottom="50dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_back2Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A35A3C"
            android:textStyle="bold"
            android:padding="20dp"
            android:text="Back to home"
            android:background="@drawable/round_btn"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>